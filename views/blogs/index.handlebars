{{#each blogs}}
  <div class="card mb-2">
    <div class="card-block">
      <h4 class="card-title">{{title}}</h4>
      <p class="card-text text-truncate">{{stripTags content}}</p>
      <a href="/blogs/show/{{id}}" class="btn btn-outline-primary">Read More</a>
    </div>
  </div>
{{else}}
  <p>No blogs listed.</p>
{{/each}}
